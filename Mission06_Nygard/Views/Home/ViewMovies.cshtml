@{
}

@model List<Movie>

@{
    ViewData["Title"] = "View Movies";
}

<h1>View Movies</h1>

<table class="table table-bordered">
    <thead class="fw-bold">
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Rating</th>
            <th>Director</th>
            <th>Edited</th>
            <th>Lent To</th>
            <th>Copied To Plex</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @* for each of the things in the list, output the data into a table *@
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Rating</td>
                <td>@x.Director</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.CopiedToPlex</td>
                <td>@x.Notes</td>

                @* <td><a class="btn">Edit</a></td> *@
                @* <td><a class="btn-danger">Delete</a></td> *@
            </tr>
        }
    </tbody>
</table>
